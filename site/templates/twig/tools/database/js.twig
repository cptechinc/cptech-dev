$(function() {
	$('#structure-modal').on('show.bs.modal', function (event) {
		var modal  = $(this);
		var button = $(event.relatedTarget);
		var database = button.data('database');
		var table    = button.data('table');
		console.log(database);
		console.log(table);
		var structure = $('div#'+database+'-'+table).text();
		modal.find('.modal-title').find('.table-name').text(table)
		modal.find('code').text(structure);
	});
});
