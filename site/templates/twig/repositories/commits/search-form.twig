<h2>Search Commits</h2>
<hr>
<form action="{{ page.url }}" method="get" class="mt-3 mb-5" submit-empty="false">
	<input type="hidden" name="filter" value="true">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label for="aftercommit">After Commit</label>
                <input type="text" class="form-control" name="after" value="{{ commits.data('aftercommitID') }}" placeholder="Enter commit ID">
            </div>
            <div class="form-group">
                <label for="beforecommit">Before Commit</label>
                <input type="text" class="form-control" name="before" value="{{ commits.data('beforecommitID') }}" placeholder="Enter commit ID">
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label for="afterdate">From Date</label>
                {% set name = 'afterdate' %}
                {% set value = '' %}
                {% include 'common/date-picker.twig' %}
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label for="beforedate">Through Date</label>
                {% set name = 'beforedate' %}
                {% set value = '' %}
                {% include 'common/date-picker.twig' %}
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
    {% if input.get.text('after') or input.get.text('before') or input.get.text('afterdate') or input.get.text('beforedate') is not empty %}
        <a href="{{ page.url }}" class="btn btn-danger mt-3">Clear Search</a>
    {% endif %}
</form>
