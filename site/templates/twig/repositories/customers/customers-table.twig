<div class="mb-3 row">
	<div class="col-sm-6">
		<a href="{{ page.parent.url }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left text-white" aria-hidden="true"></i>&nbsp;&nbsp;Back to Repository</a>
	</div>
	<div class="col-sm-6">
		<a href="{{ page.child('template=repository-customer-add').url }}" class="btn btn-info pull-right"><i class="fa fa-user-plus text-white" aria-hidden="true"></i>&nbsp;&nbsp;Add Customer</a>
	</div>
</div>
<div class="table-responsive">
	<table class="table table-striped table-sm">
		<thead>
			<tr>
				<th>Customer</th>
				<th>Project Code</th>
				<th>Repository</th>
				<th>Has Lastest?</th>
			</tr>
		</thead>
		{% for customer in customers %}
			<tr>
				<td>
					<a href="{{ customer.url }}">{{ customer.title }}</a>
				</td>
				<td>
					{{ customer.code }}
				</td>
				<td>
					{{ customer.repo }}
				</td>
				<td>
					{% if (customer.has_commits()) %}
						{% if (customer.has_latestcommit()) %}
							<span class="text-success">
								<i class="fa fa-check-square-o" aria-hidden="true"></i>
								Up To Date
							</span>
						{% else %}
							<span class="text-danger">
								<i class="fa fa-exclamation-circle" aria-hidden="true"></i>
								Last Commit: {{ customer.lastcommit.shortsha }}
							</span>
						{% endif %}
					{% else %}
						N/A
					{% endif %}
				</td>
			</tr>
		{% endfor %}
	</table>
</div>
