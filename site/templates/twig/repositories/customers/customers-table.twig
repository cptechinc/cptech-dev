<div class="table-responsive">
	<table class="table table-striped table-sm">
		<thead>
			<tr>
				<th>Customer</th>
				<th>Project Code</th>
				<th>Repository</th>
				<th>Has Lastest?</th>
			</tr>
		</thead>
		{% for customer in customers %}
			<tr>
				<td>
					<a href="{{ customer.url }}">{{ customer.title }}</a>
				</td>
				<td>
					{{ customer.code }}
				</td>
				<td>
					{{ customer.repo }}
				</td>
				<td>
					{% if (customer.has_latestcommit()) %}
						<span class="text-success">
							<i class="fa fa-check-square-o" aria-hidden="true"></i>
							Up To Date
						</span>
					{% else %}
						<span class="text-danger">
							<i class="fa fa-exclamation-circle" aria-hidden="true"></i>
							Last Commit: {{ customer.lastcommit.shortsha }}
						</span>
					{% endif %}
				</td>
			</tr>
		{% endfor %}
	</table>
</div>
